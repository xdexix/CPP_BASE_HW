#include <algorithm>
#include <iostream>
#include <string>

using namespace std;

#include "check.h"

//-----------------------------------------------------//
//task 1 конвертер валют
//-----------------------------------------------------//

int main() {
    string m1, m2;
    float count, result;

    cout << "Конвертер валют.\n\nВыберите валюту какую вы хотите перевести (RU, EU, US): ";
    cin >> m1; m1 = strChk(m1);
    cout << "Введите количество для конвертации: ";
    cin >> count;
    while (cin.fail())
    {
        cin.clear();
        cin.ignore(100, '\n');
        cin.sync();
        cout << "Некорректное значение! Введите число (дробь отделяется точкой):  ";
        cin >> count;
    }
    cout << "Выберите валюту в которую вы хотите перевести (RU, EU, US): ";
    cin >> m2; m2 = strChk(m2);
    if (m1 == "RU")
    {
        if (m2 == "EU")
            result = count * 0.012;
        if (m2 == "US")
            result = count * 0.014;
    }
    if (m1 == "EU")
    {
        if (m2 == "RU")
            result = count * 83.45;
        if (m2 == "US")
            result = count * 1.16;
    }
    if (m1 == "US")
    {
        if (m2 == "RU")
            result = count * 71.97;
        if (m2 == "EU")
            result = count * 0.86;
    }
    cout << "\nВаш превод " << m1 << " в " << m2 << " равен: " << result;
    system("pause");
}

